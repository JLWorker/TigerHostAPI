<Configuration status="INFO" monitorInterval="30">

    <!-- Logging Properties -->
    <Properties>
        <property name="LOG_PATTERN">%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %p %c %m%n</property>
        <property name="APP_LOG_ROOT">/home/makar/IdeaProjects/TigerHost/TigerHostApi/ProxmoxService</property>
    </Properties>

    <Appenders>

        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!-- File Appenders on need basis -->
<!--        rolling file - recreated log files-->
        <RollingFile name="ProxmoxService" fileName="${APP_LOG_ROOT}/proxmox_service.log"
                     filePattern="${APP_LOG_ROOT}/proxmox_service-%d{yyyy-MM-dd}-%i.log">
            <LevelRangeFilter minLevel="debug" maxLevel="fatal" onMatch="deny" onMismatch="accept"/>
            <PatternLayout pattern="${LOG_PATTERN}"/>
<!--            policies for update log files-->
            <Policies>
<!--                max size log file for update-->
                <SizeBasedTriggeringPolicy size="2MB" />
            </Policies>
<!--            max count log files-->
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>

    </Appenders>

    <Loggers>

        <Logger name="tgc.plus.proxmoxservice" additivity="false" level="debug">
            <AppenderRef ref="ProxmoxService" />
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>

    </Loggers>

</Configuration>